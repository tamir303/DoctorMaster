<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background"
    android:padding="16dp">

    <!-- Checkmark icon -->
    <ImageView
        android:id="@+id/checkmarkIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/checkmark_ic"/>

    <!-- Appointment details -->
    <TextView
        android:id="@+id/appointmentDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkmarkIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Button to add appointment to calendar -->
    <Button
        android:id="@+id/addToCalendarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appointmentDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/click_to_add_the_appointment_to_your_calendar"
        android:textColor="@android:color/white" />

    <FrameLayout
        android:id="@id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</RelativeLayout>
